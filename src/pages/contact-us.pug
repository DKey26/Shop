extends ../components/layout/index
include ../components/sprite/index
include ../components/callback-form/index

block variables
  - var pageClass = '';
  - var pageTitle = "Merch Connect - Contact Us";
  - var pageDescription = ""
  - var pageName = "contact-us"

block head
  script(src="https://maps.googleapis.com/maps/api/js?callback=initMap&sensor=false" async onload="window.initMap()")

block content
  +b.SECTION.preview
    +e.image-wrap
      img(src="/images/bg-phone.png", alt="Phone")

    .container
      +e.wrap
        +e.col
          +b.title-block
            +e.H1.title Get in touch
            +e.P.subtitle
              span Have questions? A crazy idea you want to bring to life?
              span Send us a note, or give us a call at 336-501-6722 or email us at orders@merchconnect.com and let our team help you
          +e.UL.socials.on-desktop
            +e.LI.item
              +e.A.link(href="https://www.facebook.com/MerchConnect-Studios-108419848318646")
                +sprite('facebook-blue')
            //- +e.LI.item
              +e.A.link(href="#")
                +sprite('twitter-blue')
            +e.LI.item
              +e.A.link(href="https://www.instagram.com/merchconnectstudios/")
                +sprite('instagram-blue')

          +e.P.suggestion.on-desktop Check out our location on a map.

        +e.col
          +callback-form()
          +e.UL.socials.on-mobile
            +e.LI.item
              +e.A.link(href="#")
                +sprite('facebook-blue')
            +e.LI.item
              +e.A.link(href="#")
                +sprite('twitter-blue')
            +e.LI.item
              +e.A.link(href="#")
                +sprite('instagram-blue')
          +e.P.suggestion.on-mobile Check out our location on a map.
